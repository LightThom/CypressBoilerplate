{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "cypress",
        "chai-friendly",
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "no-unused-expressions": 0,
        "chai-friendly/no-unused-expressions": 2,
        "semi": [
            2,
            "always"
        ]
    }
}